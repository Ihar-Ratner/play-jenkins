pipeline {
    agent any

   triggers {
        githubPullRequest()
    }

    stages {
        stage('Checkout') {
            steps {
                checkout scm
            }
        }
        stage('Build') {
            steps {
                echo "Building branch: ${env.BRANCH_NAME}"
                sh 'ls -lah'
            }
    }
    post {
        always {
            echo 'Clean Workspace after build'
            cleanWs()
        }
    }
}
